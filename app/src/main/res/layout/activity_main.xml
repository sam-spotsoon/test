<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.bigappcompany.test.MainActivity">

	<!-- Top Fragment holder -->
	<FrameLayout
		android:id="@+id/fl_fragment_top"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="5"
		android:orientation="horizontal">

		<!-- Bottom left fragment holder -->
		<FrameLayout
			android:id="@+id/fl_fragment_bottom_left"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

		<!-- Bottom right fragment holder -->
		<FrameLayout
			android:id="@+id/fl_fragment_bottom_right"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"/>
	</LinearLayout>

</LinearLayout>
